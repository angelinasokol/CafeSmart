<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_brown"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header with app name and weather -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SmartCoffee"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/weatherIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_sunny"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/temperatureText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24°C"
                android:textSize="18sp"
                android:textColor="@color/black"/>
        </LinearLayout>

        <!-- Weather-based recommendation -->
        <TextView
            android:id="@+id/weatherRecommendation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="In weather preferably Vanilla Cappuccino"
            android:textSize="16sp"
            android:textColor="@color/dark_brown"
            android:layout_marginBottom="24dp"/>

        <!-- Full menu button -->
        <Button
            android:id="@+id/fullMenuButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Open full menu"
            android:backgroundTint="@color/coffee_brown"
            android:textColor="@color/white"
            android:layout_marginBottom="24dp"/>

        <!-- Recommendations section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recommendations"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <!-- Recommendation items will be added dynamically -->
            <androidx.cardview.widget.CardView
                android:id="@+id/recommendation1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_iced_latte"
                        android:layout_marginEnd="16dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/recommendation1Name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Iced Latte"
                            android:textSize="18sp"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/recommendation1Price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="€ 3,80"
                            android:textSize="16sp"
                            android:textColor="@color/dark_brown"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/recommendation2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_flat_white"
                        android:layout_marginEnd="16dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/recommendation2Name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Flat White"
                            android:textSize="18sp"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/recommendation2Price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="€ 4,00"
                            android:textSize="16sp"
                            android:textColor="@color/dark_brown"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Bottom navigation -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:menu="@menu/bottom_nav_menu"
            app:itemIconTint="@color/bottom_nav_colors"
            app:itemTextColor="@color/bottom_nav_colors"
            app:labelVisibilityMode="labeled"/>
    </LinearLayout>
</ScrollView>